@layouts.root({ title: 'AdonisJS Remix - Signup' })
  @layouts.auth()
    <div class="my-4" layout-auth-form>
      <h1 class="font-display text-eggplant-900 text-6xl">Register</h1>
      <form
        method="POST"
        action="{{ route('SignupController.store') }}"
        up-submit
        up-target="body"
        up-fail-target="[layout-auth-form]"
      >
        <div class="my-4">
          <label for="username" class="block mb-1"> Username </label>
          <input
            type="text"
            name="username"
            id="username"
            class="text-eggplant-900 border border-eggplant-600 bg-translucent-dark rounded py-2 px-4 w-full"
            autofocus
          >
          @if(flashMessages.has('errors.username'))
            <p class="text-red-600 text-sm" role="alert">
              {{ flashMessages.get('errors.username') }}
            </p>
          @end
        </div>

        <div class="my-4">
          <label for="password" class="block mb-1"> Password </label>
          <input
            type="password"
            name="password"
            id="password"
            class="text-eggplant-900 border border-eggplant-600 bg-translucent-dark rounded py-2 px-4 w-full"
          >
          @if(flashMessages.has('errors.password'))
            <p class="text-red-600 text-sm" role="alert">
              {{ flashMessages.get('errors.password') }}
            </p>
          @end
        </div>

        <button type="submit" class="button w-full">Register</button>

        <div class="mt-8">
          Already have an account?
          <a
            href="{{ route('SessionController.create') }}"
            up-target="[layout-auth-form]"
